<!DOCTYPE html>
<html>
<head>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.3/react.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.3/react-dom.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>
<body>
  <div id="example"></div>
  <script type="text/babel">

  var data = [
    {id: 1, author: "Pete Hunt", text: "This is one comment"},
    {id: 2, author: "Jordan Walke", text: "This is *lol* comment"}
  ];

  var ConstraintMatrix = React.createClass({
    render: function() {

      return (
        <table>
        <tbody>
        <th>
        <td>c1</td>
        <td>c2</td>
        </th>
        <ConstraintRow></ConstraintRow>
        <ConstraintRow></ConstraintRow>
        </tbody>
        </table>
      );
    }
  });

  var ConstraintRow = React.createClass({
    render: function() {
      return (
        <tr>
          <ConstraintElem result=1></ConstraintElem>
          <ConstraintElem result=0></ConstraintElem>
        </tr>
      );
    }
  });

  var ConstraintElem = React.createClass({
    render: function() {
      if (this.props.result == 0) {
        var elem = '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'
      } else if (this.props.result == 1) {
        var elem = '<span class="glyphicon glyphicon-ok" aria-hidden="true">'
      }
      return (
        <td>
        {elem}
        </td>
      );
    }
  });

  ReactDOM.render(
    <ConstraintMatrix />,
    document.getElementById('example')
  );
  </script>
</body>
</html>
